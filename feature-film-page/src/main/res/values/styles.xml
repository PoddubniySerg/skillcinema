<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="film_page_collapsing_toolbar_text">
        <item name="fontFamily">@font/graphik</item>
        <item name="android:textColor">#FFB5B5C9</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="film_page_description_content_text_style">
        <item name="android:textColor">@color/film_page_description_content_text_color</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:layout_marginTop">40dp</item>
    </style>

    <style name="film_page_collections_title_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/graphik_semibold</item>
        <item name="android:textColor">@color/film_page_description_content_text_color</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="film_page_collections_show_all_button_style">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#FF3D3BFF</item>
        <item name="android:fontFamily">@font/graphik_medium</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:drawablePadding">0dp</item>
        <item name="android:gravity">end|center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
</resources>